

<RelativeLayout

xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
android:id="@+id/rr"
    android:background="#f9ffffff">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Welcome To a Guess Random Number Game"
    android:id="@+id/textView"
    android:textSize="30dp"
    android:layout_marginTop="30dp"
    android:layout_alignParentTop="true"
    android:editable="false"
    android:textColor="#000000"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:textStyle="bold|italic"
    android:layout_marginBottom="60dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Show Random Number"
    android:id="@+id/button"
    android:onClick="Show_Random_Number"
    android:layout_above="@+id/editText"
    android:layout_centerHorizontal="true"
    android:background="#ec3636"
    android:layout_marginTop="10dp" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Start"
    android:id="@+id/button2"
    android:nestedScrollingEnabled="true"
    android:onClick="Start_Game"
    android:layout_above="@+id/button"
    android:layout_alignLeft="@+id/button"
    android:layout_alignStart="@+id/button"
    android:background="#81d415"
    android:layout_alignRight="@+id/button"
    android:layout_alignEnd="@+id/button"
    android:layout_marginTop="80dp"
    android:layout_marginBottom="10dp" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="check"
    android:id="@+id/bcheck"
    android:onClick="Check_Number"
    android:clickable="false"
    android:layout_marginBottom="50dp"
    android:layout_alignParentBottom="true"
    android:background="#54f6d8"
    android:layout_alignLeft="@+id/button"
    android:layout_alignStart="@+id/button"
    android:layout_alignRight="@+id/button"
    android:layout_alignEnd="@+id/button" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:maxLength="3"
        android:layout_above="@+id/bcheck"
        android:layout_marginBottom="60dp"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="40dp" />


</RelativeLayout>